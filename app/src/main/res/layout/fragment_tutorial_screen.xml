<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TutorialScreen">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip_button_tur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:drawableEnd="@drawable/skip_icon"
        android:background="@color/white"
        android:layout_alignParentEnd="true"
        style="@style/text_style"
        android:textColor="@color/black"
        android:stateListAnimator="@null"
        android:layout_marginEnd="20dp"
        android:padding="20sp"
        android:layout_marginVertical="30dp"
        android:textAllCaps="false"
        />
    <ImageView
        android:id="@+id/image_view_tur"
        android:layout_below="@+id/skip_button_tur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/scroll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_tur"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/minus" />
    <TextView
        android:id="@+id/title_tur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's talk about us"
        android:layout_below="@id/scroll_icon"
        android:textStyle="bold"
        style="@style/text_style"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sub_text_tur"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tur"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="10sp"
        android:shadowRadius="0"
        android:text="An IOT Application created by Vitamin Team to help anyone protect their family"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_started_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_text_tur"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_btn_started"
        android:text="Get Started"
        style="@style/text_style"
        android:textAllCaps="false"
        android:padding="20sp"
        android:textSize="20dp"
        android:textColor="@color/white" />
</RelativeLayout>